# Uncomment the next line to define a global platform for your project
platform :ios, '9.0'

target 'CryptocurrencyNews' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for CryptocurrencyNews
  pod 'Alamofire'
  pod 'SnapKit'
  pod 'RxSwift'
  pod 'RxCocoa'
  pod 'RxBlocking'
  
  target 'API' do
      use_frameworks!
      
      pod 'Alamofire'
      pod 'RxSwift'
  end
  
  target 'CryptocurrencyNewsTests' do
      use_frameworks!
      
      pod 'RxSwift'
      pod 'RxBlocking'
  end
  
  target 'APITests' do
      use_frameworks!
      
      pod 'Alamofire'
      pod 'RxSwift'
      pod 'RxBlocking'
  end
  
end
